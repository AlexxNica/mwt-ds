{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "eventHubNamespaceName": { "type": "string" },
    "ehName": { "type": "string" },
    "messageRetentionInDays": {
      "type": "int",
      "metadata": {
        "description": "how long to keep messages before purging"
      }
    },
    "partitionCount": {
      "type": "int",
      "minValue": 2,
      "maxValue": 32,
      "metadata": {
        "description": "degree of parallelism"
      }
    },
    "location": { "type": "string" }
  },
  "variables": {
    "apiVersion": "2015-08-01",
    "EHResourceId": "[concat(resourceId('Microsoft.EventHub/namespaces', parameters('eventHubNamespaceName')), '/eventHubs/', parameters('ehName'))]",
    "SendRuleResourceId": "[resourceId('Microsoft.EventHub/namespaces/authorizationRules', parameters('eventHubNamespaceName'), parameters('ehName'), 'SendOnly')]",
    "ListenRuleResourceId": "[resourceId('Microsoft.EventHub/namespaces/authorizationRules', parameters('eventHubNamespaceName'), parameters('ehName'), 'ListenOnly')]"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersion')]",
      "name": "[concat(parameters('eventHubNamespaceName'), '/', parameters('ehName'))]",
      "type": "EventHubs",
      "dependsOn": [
        "[concat('Microsoft.EventHub/namespaces/', parameters('eventHubNamespaceName'))]"
      ],
      "properties": {
        "path": "[parameters('ehName')]",
        "MessageRetentionInDays": "[parameters('messageRetentionInDays')]",
        "PartitionCount": "[parameters('partitionCount')]"
      },
      "resources": [
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "ListenOnly",
          "type": "AuthorizationRules",
          "dependsOn": [
            "[variables('EHResourceId')]"
          ],
          "properties": {
            "keyName": "ListenOnly",
            "claimType": "SharedAccessKey",
            "claimValue": "None",
            "rights": [ "Listen" ]
          }
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "SendOnly",
          "type": "AuthorizationRules",
          "dependsOn": [
            "[variables('EHResourceId')]",
            "[variables('ListenRuleResourceId')]"
          ],
          "properties": {
            "keyName": "SendOnly",
            "claimType": "SharedAccessKey",
            "claimValue": "None",
            "rights": [ "Send" ]
          }
        }
      ]
    }
  ],
  "outputs": {
    "sendConnectionString": {
      "type": "string",
      "value": "[listkeys(variables('SendRuleResourceId'), variables('apiVersion')).primaryConnectionString]"
    },
    "sendKey": {
      "type": "string",
      "value": "[listkeys(variables('SendRuleResourceId'), variables('apiVersion')).primaryKey]"
    },
    "listenConnectionString": {
      "type": "string",
      "value": "[listkeys(variables('ListenRuleResourceId'), variables('apiVersion')).primaryConnectionString]"
    },
    "listenKey": {
      "type": "string",
      "value": "[listkeys(variables('ListenRuleResourceId'), variables('apiVersion')).primaryKey]"
    }
  }
}
