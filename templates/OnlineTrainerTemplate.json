{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "binaryStorageAccountName": { "type": "string" },
    "userStorageAccountName": { "type": "string" },
    "instrumentationKey": { "type": "string" },
    "onlineTrainerCspkgToken": { "type": "string" },
    "joinQuery": { "type": "object" },
    "evalQuery": { "type": "object" },
    "adminToken": { "type": "string" }
  },
  "variables": {
    "name": "[concat(resourceGroup().name,'-trainer')]",
    "cscfg": {
      "joinedEventHubConnectionString": "[parameters('joinquery').joinedEventHub.value.listenConnectionString.value]",
      "evalEventHubConnectionString": "[parameters('evalquery').evalEventHub.value.sendConnectionString.value]",
      "userStorageAccountName": "[parameters('userStorageAccountName')]",
      "instrumentationKey": "[parameters('instrumentationKey')]",
      "adminToken": "[parameters('adminToken')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2014-06-01",
      "type": "Microsoft.ClassicCompute/domainNames",
      "name": "[variables('name')]",
      "location": "[resourceGroup().location]",
      "resources": [
        {
          "apiVersion": "2014-06-01",
          "name": "production",
          "type": "deploymentSlots",
          "dependsOn": [
            "[resourceId('Microsoft.ClassicCompute/domainNames', variables('name'))]"
          ],
          "properties": {
            "packageLink": {
              "uri": "[concat('https://', parameters('binaryStorageAccountName'), '.blob.core.windows.net/high-frequency-train/OnlineTraining.cspkg?', parameters('onlineTrainerCspkgToken'))]"
            },
            "deploymentLabel": "[variables('name')]",
            "ConfigurationLink": {
              "uri": "[concat('https://serviceconfiguration.azurewebsites.net/', parameters('binaryStorageAccountName'), '/', base64(string(variables('cscfg'))), '/high-frequency-train/ServiceConfiguration.cscfg')]"
            },
            "deploymentOptions": "StartDeployment"
          }
        }
      ]
    }
  ]
}