{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "managementPassword": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Password for management center."
      }
    },
    "userToken": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Authentication token for WebAPI trainer."
      }
    },
    "adminToken": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Authentication token for online trainer."
      }
    },
    "messageRetentionInDays": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 7,
      "metadata": {
        "description": "How long to keep messages before purging"
      }
    },
    "partitionCount": {
      "type": "int",
      "defaultValue": 16,
      "minValue": 1,
      "metadata": {
        "description": "Degree of parallelism"
      }
    },
    "experimentalUnitDurationInSeconds": {
      "type": "int",
      "minValue": 5,
      "defaultValue": 30,
      "metadata": {
        "description": "Experimental unit duration (TODO)"
      }
    },
    "vowpalWabbitTrainArguments": {
      "type": "string",
      "defaultValue": "--cb_adf --rank_all --cb_type dr",
      "metadata": {
        "description": "Vowpal wabbit train arguments (TODO)"
      }
    },
    "numberOfActions": {
      "type": "int",
      "defaultValue": "0",
      "minValue": 0,
      "metadata": {
        "description": "Number of actions"
      }
    },
    "onlineTrainerCheckpointInterval": {
      "type": "string",
      "defaultValue": "5:00",
      "metadata": {
        "description": "Checkpoint interval in event time used to checkpoint"
      }
    },
    "onlineTrainerCheckpointCount": {
      "type": "int",
      "defaultValue": "0",
      "metadata": {
        "description": "Checkpoint interval in event time used to checkpoint"
      }
    }
  },
  "variables": {
    "assetLocation": "https://raw.githubusercontent.com/multiworldtesting/ds-provisioning/master/",
    "binaryStorageAccountName": "dscode",
    "onlineTrainerCspkgToken": "sr=b&sv=2015-02-21&st=2016-06-01T17%3A00%3A25Z&se=2099-06-01T18%3A00%3A00Z&sp=r&sig=BzvUAAilAs%2B0NYmnPUsc2TtdNzkQILH3bbFrgQcZ3x4%3D"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "ManagementPasswordGenerator",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), 'templates/PasswordGeneratorTemplate.json')]" },
        "parameters": {
          "Password": { "value": "[parameters('managementPassword')]" },
          "RandomSeed": { "value": "[concat(resourceGroup().id, 'mc')]" }
        }
      },
    },
    {
      "apiVersion": "2015-01-01",
      "name": "UserTokenGenerator",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), 'templates/PasswordGeneratorTemplate.json')]" },
        "parameters": {
          "Password": { "value": "[parameters('userToken')" },
          "RandomSeed": { "value": "[concat(resourceGroup().id, 'ut')]" }
        }
      },
    },
    {
      "apiVersion": "2015-01-01",
      "name": "AdminTokenGenerator",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), 'templates/PasswordGeneratorTemplate.json')]" },
        "parameters": {
          "Password": { "value": "[parameters('adminToken')]" },
          "RandomSeed": { "value": "[concat(resourceGroup().id, 'at')]" }
        }
      },
    },
    {
      "apiVersion": "2015-01-01",
      "name": "Storage",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), 'templates/StorageTemplate.json')]" }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "AppInsights",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), '/templates/AppInsightsTemplate.json')]" }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "ServiceBus",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), '/templates/ServiceBusTemplate.json')]" }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "EventHubInteraction",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [ "Microsoft.Resources/deployments/ServiceBus" ],
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[concat(variables('assetLocation'), '/templates/EventHubTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ehName": { "value": "interaction" },
          "serviceBusName": { "value": "[reference('Microsoft.Resources/deployments/ServiceBus').outputs.ServiceBusName.value]" },
          "messageRetentionInDays": { "value": "[parameters('messageRetentionInDays')]" },
          "partitionCount": { "value": "[parameters('partitionCount')]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "EventHubObservation",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [ "Microsoft.Resources/deployments/ServiceBus" ],
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[concat(variables('assetLocation'), '/templates/EventHubTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ehName": { "value": "observation" },
          "serviceBusName": { "value": "[reference('Microsoft.Resources/deployments/ServiceBus').outputs.ServiceBusName.value]" },
          "messageRetentionInDays": { "value": "[parameters('messageRetentionInDays')]" },
          "partitionCount": { "value": "[parameters('partitionCount')]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "EventHubJoined",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [ "Microsoft.Resources/deployments/ServiceBus" ],
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[concat(variables('assetLocation'), '/templates/EventHubTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ehName": { "value": "joined" },
          "serviceBusName": { "value": "[reference('Microsoft.Resources/deployments/ServiceBus').outputs.ServiceBusName.value]" },
          "messageRetentionInDays": { "value": "[parameters('messageRetentionInDays')]" },
          "partitionCount": { "value": "[parameters('partitionCount')]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "EventHubEval",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [ "Microsoft.Resources/deployments/ServiceBus" ],
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), '/templates/EventHubTemplate.json')]" },
        "parameters": {
          "ehName": { "value": "eval" },
          "serviceBusName": { "value": "[reference('Microsoft.Resources/deployments/ServiceBus').outputs.ServiceBusName.value]" },
          "messageRetentionInDays": { "value": "[parameters('messageRetentionInDays')]" },
          "partitionCount": { "value": "[parameters('partitionCount')]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "WebAPI",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "Microsoft.Resources/deployments/UserTokenGenerator",
        "Microsoft.Resources/deployments/Storage",
        "Microsoft.Resources/deployments/AppInsights"
      ],
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), '/templates/WebAPITemplate.json')]" },
        "parameters": {
          "binaryStorageAccountName": { "value": "[variables('binaryStorageAccountName')]" },
          "instrumentationKey": { "value": "[reference('Microsoft.Resources/deployments/AppInsights').outputs.instrumentationKey.value]" },
          "userStorageAccountName": { "value": "[reference('Microsoft.Resources/deployments/Storage').outputs.userStorageAccountName.value]" },
          "userToken": { "value": "[reference('Microsoft.Resources/deployments/UserTokenGenerator').outputs.FinalPassword.value]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "JoinQuery",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "Microsoft.Resources/deployments/Storage",
        "Microsoft.Resources/deployments/EventHubInteraction",
        "Microsoft.Resources/deployments/EventHubObservation",
        "Microsoft.Resources/deployments/EventHubJoined"
      ],
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), '/templates/StreamAnalyticsJoinTemplate.json')]" },
        "parameters": {
          "assetLocation": { "value": "[variables('assetLocation')]" },
          "userStorage": { "value": "[reference('Microsoft.Resources/deployments/Storage').outputs]" },
          "serviceBusName": { "value": "[reference('Microsoft.Resources/deployments/ServiceBus').outputs.ServiceBusName.value]" },
          "interactionEventHub": { "value": "[reference('Microsoft.Resources/deployments/EventHubInteraction').outputs]" },
          "observationEventHub": { "value": "[reference('Microsoft.Resources/deployments/EventHubObservation').outputs]" },
          "joinedEventHub": { "value": "[reference('Microsoft.Resources/deployments/EventHubJoined').outputs]" },
          "messageRetentionInDays": { "value": "[parameters('messageRetentionInDays')]" },
          "partitionCount": { "value": "[parameters('partitionCount')]" },
          "experimentalUnitDurationInSeconds": { "value": "[parameters('experimentalUnitDurationInSeconds')]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "EvalQuery",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "Microsoft.Resources/deployments/ServiceBus",
        "Microsoft.Resources/deployments/Storage",
        "Microsoft.Resources/deployments/EventHubEval"
      ],
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), '/templates/StreamAnalyticsEvalTemplate.json')]" },
        "parameters": {
          "assetLocation": { "value": "[variables('assetLocation')]" },
          "userStorageAccountName": { "value": "[reference('Microsoft.Resources/deployments/Storage').outputs.userStorageAccountName.value]" },
          "userStorageAccountKey": { "value": "[reference('Microsoft.Resources/deployments/Storage').outputs.userStorageAccountKey.value]" },
          "serviceBusName": { "value": "[reference('Microsoft.Resources/deployments/ServiceBus').outputs.ServiceBusName.value]" },
          "evalEventHub": { "value": "[reference('Microsoft.Resources/deployments/EventHubEval').outputs]" },
          "messageRetentionInDays": { "value": "[parameters('messageRetentionInDays')]" },
          "partitionCount": { "value": "[parameters('partitionCount')]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "WebManage",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "Microsoft.Resources/deployments/ManagementPasswordGenerator",
        "Microsoft.Resources/deployments/Storage",
        "Microsoft.Resources/deployments/AppInsights",
        "Microsoft.Resources/deployments/EventHubInteraction",
        "Microsoft.Resources/deployments/EventHubObservation"
      ],
      "properties": {
        "mode": "incremental",
        "templateLink": { "uri": "[concat(variables('assetLocation'), '/templates/WebManageTemplate.json')]" },
        "parameters": {
          "instrumentationKey": { "value": "[reference('Microsoft.Resources/deployments/AppInsights').outputs.instrumentationKey.value]" },
          "userStorageConnectionString": { "value": "[reference('Microsoft.Resources/deployments/Storage').outputs.userStorageConnectionString.value]" },
          "managementPassword": { "value": "[reference('Microsoft.Resources/deployments/ManagementPasswordGenerator').outputs.FinalPassword.value]" },

          "interactionEventHub": { "value": "[reference('Microsoft.Resources/deployments/EventHubInteraction').outputs]" },
          "observationEventHub": { "value": "[reference('Microsoft.Resources/deployments/EventHubObservation').outputs]" },

          "experimentalUnitDurationInSeconds": { "value": "[parameters('experimentalUnitDurationInSeconds')]" },
          "vowpalWabbitTrainArguments": { "value": "[parameters('vowpalWabbitTrainArguments')]" },
          "numberOfActions": { "value": "[parameters('numberOfActions')]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "OnlineTrainer",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "Microsoft.Resources/deployments/AdminTokenGenerator",
        "Microsoft.Resources/deployments/Storage",
        "Microsoft.Resources/deployments/AppInsights",
        "Microsoft.Resources/deployments/EventHubJoined",
        "Microsoft.Resources/deployments/EventHubEval"
      ],
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[concat(variables('assetLocation'), 'templates/OnlineTrainerTemplate.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "binaryStorageAccountName": { "value": "[variables('binaryStorageAccountName')]" },
          "instrumentationKey": { "value": "[reference('Microsoft.Resources/deployments/AppInsights').outputs.instrumentationKey.value]" },
          "onlineTrainerCspkgToken": { "value": "[variables('onlineTrainerCspkgToken')]" },

          "cscfg": {
            "value": {
              "joinedEventHubConnectionString": "[reference('Microsoft.Resources/deployments/EventHubJoined').outputs.listenConnectionString.value]",
              "evalEventHubConnectionString": "[reference('Microsoft.Resources/deployments/EventHubEval').outputs.sendConnectionString.value]",
              "userStorageConnectionString": "[reference('Microsoft.Resources/deployments/Storage').outputs.userStorageConnectionString.value]",
              "instrumentationKey": "[reference('Microsoft.Resources/deployments/AppInsights').outputs.instrumentationKey.value]",
              "adminToken": "[reference('Microsoft.Resources/deployments/AdminTokenGenerator').outputs.FinalPassword.value]",
              "checkpointInterval": "[parameters('onlineTrainerCheckpointInterval')]",
              "checkpointCount": "[parameters('onlineTrainerCheckpointCount')]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "ManagementCenter": {
      "type": "string",
      "value": "[reference('Microsoft.Resources/deployments/WebManage').outputs.url.value]"
    },
    "ManagementPassword": {
      "type": "string",
      "value": "[reference('Microsoft.Resources/deployments/ManagementPasswordGenerator').outputs.FinalPassword.value]"
    },
    "WebAPIToken": {
      "type": "string",
      "value": "[reference('Microsoft.Resources/deployments/UserTokenGenerator').outputs.FinalPassword.value]"
    },
    "OnlineTrainerToken": {
      "type": "string",
      "value": "[reference('Microsoft.Resources/deployments/AdminTokenGenerator').outputs.FinalPassword.value]"
    },
    "ClientLibraryUrl": {
      "type": "string",
      "value": "[concat('https://', reference('Microsoft.Resources/deployments/Storage').outputs.userStorageAccountName.value, '.blob.core.windows.net/mwt-settings/client')]"
    }
  }
}
